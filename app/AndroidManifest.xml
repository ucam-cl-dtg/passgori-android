<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.ac.cam.cl.passgori.app"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:description="@string/appDescription"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".PassgoriLoginActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="nosensor" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".PasswordStoreService" >
        </service>

        <activity
            android:name="PassgoriPresentPasswordsActivity"
            android:configChanges="orientation"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="PassgoriEditPasswordActivity"
            android:configChanges="orientation"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="PassgoriConfigurationsEditor"
            android:configChanges="orientation"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="PassgoriListPasswordsActivity"
            android:configChanges="orientation"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name=".PassgoriBackupActivityy"
            android:configChanges="orientation"
            android:screenOrientation="nosensor" >
        </activity>
    </application>

</manifest>